<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/label"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ResourceActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="302dp"
        android:layout_height="95dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/red_hat_text"
        android:includeFontPadding="false"
        android:text="Youâ€™re in the right place. Here are some resources that might help: "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nationalResources"
        android:layout_width="245dp"
        android:layout_height="95dp"
        android:layout_marginTop="35dp"
        android:onClick="onClick"
        android:backgroundTint="#F2B705"
        android:text="National Resources"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/stateResources"
        android:layout_width="245dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:backgroundTint="#2E83F2"
        android:text="State Resources"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nationalResources" />

    <Button
        android:id="@+id/generalResources"
        android:layout_width="245dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:text="General Resources"
        android:backgroundTint="#F2B705"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stateResources" />

    <Button
        android:id="@+id/recommendedResources"
        android:layout_width="245dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:backgroundTint="#2E83F2"
        android:text="Recommended Resource (Currently none, please check back later)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generalResources" />
</androidx.constraintlayout.widget.ConstraintLayout>
